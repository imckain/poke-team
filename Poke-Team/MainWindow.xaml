<Window
    x:Class="Poke_Team.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Poke_Team"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Poke-Team"
    Width="800"
    Height="600"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <Grid
            x:Name="PanelHeader"
            Height="50"
            VerticalAlignment="Top"
            Background="#EF5350"
            MouseDown="PanelHeader_OnMouseDown">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontFamily="./Fonts/#Press Start 2P"
                FontSize="32"
                Text="P O K E - T E A M" />
            <Button
                x:Name="CloseButton"
                HorizontalAlignment="Right"
                VerticalAlignment="Stretch"
                Click="Close_Button"
                FontFamily="Segoe MDL2 Assets"
                Content=""
                Width="50"
                FontSize="28"
                Background="Transparent"
                BorderBrush="Transparent"/>
        </Grid>
        <Grid
            x:Name="SidePanel"
            Width="150"
            HorizontalAlignment="Left"
            Background="#EF5350"
            Panel.ZIndex="100">
            <StackPanel>
                <Grid Height="50">
                    <Button
                        Height="40"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Click="Menu_Button_Click"
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="32"
                        Width="50">
                        
                    </Button>
                </Grid>
                <ListView
                    Background="Transparent"
                    BorderBrush="Transparent"
                    FontFamily="/Poke-Team;component/Fonts/#Quicksand"
                    FontSize="10"
                    Foreground="White"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListViewItem Height="40">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                VerticalAlignment="Center"
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="34">
                                
                            </TextBlock>
                            <TextBlock Margin="15,0,0,0" VerticalAlignment="Center">H O M E</TextBlock>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem Height="40" Margin="0,10,0,10">
                        <StackPanel Orientation="Horizontal">
                            <Image Width="36" Source="Images/pngaaa.com-96215.png" />
                            <TextBlock Margin="15,0,0,0" VerticalAlignment="Center">T E A M S</TextBlock>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem Height="40" Margin="0,10,0,10">
                        <StackPanel Orientation="Horizontal">
                            <Image Width="36" Source="Images/pngaaa.com-96215.png" />
                            <TextBlock
                                Margin="15,0,0,0"
                                VerticalAlignment="Center"
                                TextWrapping="Wrap">
                                B U I L D E R
                            </TextBlock>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem Height="40" Margin="0,10,0,10">
                        <StackPanel Orientation="Horizontal">
                            <Image Width="36" Source="Images/pngaaa.com-96215.png" />
                            <TextBlock
                                Margin="15,0,0,0"
                                VerticalAlignment="Center"
                                TextWrapping="Wrap">
                                C O L L E C T I O N
                            </TextBlock>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem Height="40" Margin="0,10,0,10">
                        <StackPanel Orientation="Horizontal">
                            <Image Width="36" Source="Images/pngaaa.com-96215.png" />
                            <TextBlock
                                Margin="15,0,0,0"
                                VerticalAlignment="Center"
                                TextWrapping="Wrap">
                                S T R A T E G Y
                            </TextBlock>
                        </StackPanel>
                    </ListViewItem>
                </ListView>
            </StackPanel>
            <StackPanel
                Margin="10,10"
                VerticalAlignment="Bottom"
                Orientation="Horizontal">
                <TextBlock
                    VerticalAlignment="Center"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="30"
                    Foreground="White">
                    
                </TextBlock>
                <TextBlock
                    Margin="15,0,0,0"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    FontFamily="/Poke-Team;component/Fonts/#Quicksand"
                    FontSize="10"
                    Foreground="White"
                    TextWrapping="Wrap">
                    S E T T I N G S
                </TextBlock>
            </StackPanel>
        </Grid>
        <Grid Margin="55 50 0 0">
            <WrapPanel HorizontalAlignment="Stretch" Orientation="Horizontal" VerticalAlignment="Top" Margin="50">
                <StackPanel Height="120" Width="180" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Label HorizontalAlignment="Center">Position 1</Label>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                        <Image Source="Images/clipart1916649.png" Width="40" HorizontalAlignment="Left" Margin="20"></Image>
                        <Canvas HorizontalAlignment="Center" VerticalAlignment="Center" Height="60" Background="DimGray" Width="2"></Canvas>
                    </StackPanel>
                </StackPanel>
                <StackPanel Height="120" Width="180" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Label HorizontalAlignment="Center">Position 2</Label>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                        <Image Source="Images/clipart1916649.png" Width="40" HorizontalAlignment="Left" Margin="20"></Image>
                        <Canvas HorizontalAlignment="Center" VerticalAlignment="Center" Height="60" Background="DimGray" Width="2"></Canvas>
                    </StackPanel>
                </StackPanel>
                <StackPanel Height="120" Width="180" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Label HorizontalAlignment="Center">Position 2</Label>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                        <Image Source="Images/clipart1916649.png" Width="40" HorizontalAlignment="Left" Margin="20"></Image>
                        <Canvas HorizontalAlignment="Center" VerticalAlignment="Center" Height="60" Background="DimGray" Width="2"></Canvas>
                    </StackPanel>
                </StackPanel>
            </WrapPanel>
        </Grid>
    </Grid>
</Window>
